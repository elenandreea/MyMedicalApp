<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="245dp">

    <ImageView
        android:id="@+id/row_post_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/imageGradient"
        android:layout_width="0dp"
        android:layout_height="85dp"
        app:layout_constraintBottom_toBottomOf="@+id/row_post_img"
        app:layout_constraintEnd_toEndOf="@+id/row_post_img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/row_post_img"
        app:srcCompat="@drawable/black_gradient" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/row_post_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Category"
        android:textColor="#fff"
        android:background="@drawable/textview_design_category"
        app:layout_constraintBottom_toBottomOf="@+id/imageGradient"
        app:layout_constraintStart_toStartOf="@+id/imageGradient"
        app:layout_constraintTop_toTopOf="@+id/imageGradient" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/row_post_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/lorem/random"
        android:textColor="#ffff"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/textview_design_category"
        app:layout_constraintBottom_toBottomOf="@+id/imageGradient"
        app:layout_constraintEnd_toEndOf="@+id/imageGradient"
        app:layout_constraintTop_toTopOf="@+id/imageGradient"
        app:layout_constraintStart_toEndOf="@id/row_post_category"/>


</androidx.constraintlayout.widget.ConstraintLayout>